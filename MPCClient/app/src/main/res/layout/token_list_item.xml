<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="50dp"
    android:layout_marginTop="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/token_type_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/eth_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/token_type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="ETH"
        android:textColor="@color/color_ff1f2021"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@+id/token_type_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/amount_tv"
        android:text="200.123"
        android:id="@+id/number_tv"
        android:textSize="17sp"
        android:textColor="@color/color_ff1f2021"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/number_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="$333,576.00"
        android:id="@+id/amount_tv"
        android:visibility="gone"
        android:textSize="13sp"
        android:textColor="@color/color_ff919599"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/testIcon"
        android:src="@mipmap/test"
        android:visibility="gone"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/token_type_tv"
        app:layout_constraintStart_toEndOf="@+id/token_type_tv"
        app:layout_constraintBottom_toBottomOf="@+id/token_type_tv"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>